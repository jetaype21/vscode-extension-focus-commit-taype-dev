{
  "name": "focus-commit",
  "displayName": "Focus Commit",
  "description": "Genera mensajes de commit inteligentes y contextuales basados en los cambios de tu código con el poder de la inteligencia artificial.",
  "version": "1.0.1",
  "publisher": "taype-dev",
  "icons": {
    "16": "assets/logo-extension.png",
    "48": "assets/logo-extension.png",
    "128": "assets/logo-extension.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/logo-extension.png",
      "48": "assets/logo-extension.png",
      "128": "assets/logo-extension.png"
    },
    "default_title": "Mi Extensión"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "projectAnalyzer.analyzeWithAI",
        "title": "FOCUS COMMIT: Analizar Proyecto"
      },
      {
        "command": "projectAnalyzer.generateCommitWithAI",
        "title": "FOCUS COMMIT: Generar Mensaje de Commit"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "openai": "^4.76.3",
    "simple-git": "^3.27.0"
  }
}
